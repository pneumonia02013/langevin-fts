platform = "CPU_MKL"           # CUDA, CPU_MKL, CPU_FFTW
# SIMULATION BOX
geometry.grids        = 31  49  63   # the number of simulation grids
geometry.box_size     = 4.0 3.0 2.0  # simulation box as bN^(1/2) unit

# POLYMER CHAIN
chain.chi_n                 = 20.0  # Flory Huggins parameters. 
chain.a_fraction            = 0.3   # f
chain.contour_step          = 50    # N

# ITERATION PARAMETER
iter.step_saddle = 20    # max number of W+ saddle point approximation iteration.
iter.tolerance = 1.0d-9  # exit loop if error level < tolerance.

# ANDERSON MIXING
am.mix_init = 0.1        # init mixing parameter of simple mixing.
am.mix_min = 0.1         # minimum mixing parameter of simple mixing.
am.start_error = 8.0d-1  # anderson mixing begin if error_level < start_error.
am.step_max = 20         # max number of previous steps to calculate
                         # new field when using Anderson mixing.

# GPU CONFIGURATION
gpu.num_blocks     = 256     # the number blocks 
gpu.threads_per_block = 128  # the number of threads per block.
                             # typically 128 or 256 is optimal.
